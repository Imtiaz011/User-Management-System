<!--form handling-->
<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Enter your name">
        </div>

        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="Enter your email">
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-gender1" name="gender" value="Male">
                <label for="radio-gender1" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-gender2" name="gender" value="Female">
                <label for="radio-gender2" class="radio-label">Female</label>
            </div>
        </div>

        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-gender3" name="status" value="Active">
                <label for="radio-gender3" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-gender4" name="status" value="Inactive">
                <label for="radio-gender4" class="radio-label">Inactive</label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn text-dark update">Save</button>
            </div>
        </div>
    </div>
</form>
